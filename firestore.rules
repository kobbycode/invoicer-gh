rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Invoices subcollection - users can only read/write their own invoices
      match /invoices/{invoiceId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
      
      // Clients subcollection - users can only read/write their own clients
      match /clients/{clientId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
      
      // Payments subcollection - users can only read/write their own payments
      match /payments/{paymentId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // Legacy root-level collections (if you have any existing data at root level)
    // These can be removed if you're only using subcollections
    
    // Settings collection - users can only read/write their own settings
    match /settings/{settingId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Transactions collection - users can only read/write their own transactions
    match /transactions/{transactionId} {
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
  }
}
